# Purpose: Configuration for Flake8 code style checker
[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    instance,
    node_modules,
    static/css/tailwind.output.css,
    screenshots,
    .venv,
    venv
extend-ignore = 
    # Allow long lines in specific cases (can be adjusted)
    E501,
    # Allow line breaks before binary operators (Black style)
    W503
per-file-ignores = 
    # Allow star imports in __init__.py files
    __init__.py:F401,F403
    # Allow unused imports in test files
    test_*.py:F401
    # Allow unused imports in configuration files
    config.py:F401
max-complexity = 10
